/**
 * Local Configuration for InfinityFree
 * Save this file as: src/config/config.local.php
 */

function installConfigGet($key, $default = null) {
    $config = [
        'DB_HOST' => 'REPLACE_WITH_INFINITYFREE_HOSTNAME',
        'DB_PORT' => '3306',
        'DB_NAME' => 'REPLACE_WITH_INFINITYFREE_DB_NAME',
        'DB_USER' => 'REPLACE_WITH_INFINITYFREE_USERNAME',
        'DB_PASS' => 'REPLACE_WITH_INFINITYFREE_PASSWORD',
        
        // Optional: Set this if your app is in a subdirectory (e.g. http://yoursite.com/survey)
        // 'APP_URL' => 'http://result-from-infinityfree-url',
    ];

    return $config[$key] ?? $default;
}
